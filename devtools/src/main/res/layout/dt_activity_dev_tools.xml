<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingLeft="@dimen/dt_dp_16"
    android:paddingRight="@dimen/dt_dp_16">

    <real.droid.devtools.wigets.Toolbar
        app:hideBack="true"
        app:title="@string/dt_dev_tools"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dt_dp_66"/>

    <TextView
        android:textColor="@color/red"
        android:textSize="@dimen/dt_sp_14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dt_base_features" />

    <include layout="@layout/dt_divider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dt_dp_16"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/view_dir"
            android:textSize="@dimen/dt_sp_12"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:drawableTop="@mipmap/dt_icon_file_manager"
            android:gravity="center"
            android:text="@string/dt_internal_dir_list" />
    </LinearLayout>

</LinearLayout>