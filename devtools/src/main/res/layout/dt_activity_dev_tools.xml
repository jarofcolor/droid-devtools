<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/dt_default_padding"
    android:paddingTop="@dimen/dt_top_padding"
    android:paddingRight="@dimen/dt_default_padding">

    <TextView
        android:textStyle="bold"
        android:textSize="@dimen/dt_text_size_14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dt_base_features" />

    <include layout="@layout/dt_divider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dt_default_margin"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/view_dir"
            android:textSize="@dimen/dt_text_size_12"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:drawableTop="@mipmap/dt_icon"
            android:gravity="center"
            android:text="@string/dt_internal_dir_list" />
    </LinearLayout>

</LinearLayout>